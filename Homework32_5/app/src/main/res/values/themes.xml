<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework32_5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryVariant">#c66900</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffeb3b</item>
        <item name="colorSecondaryVariant">#c8b900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline6">@style/headline6</item>
        <item name="textAppearanceBody2">@style/body2</item>
        <item name="shapeAppearanceMediumComponent">@style/shapeAppearance</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

    <style name="headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="shapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

</resources>